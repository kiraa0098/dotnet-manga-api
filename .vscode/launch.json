{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Launch API & Swagger",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "Kill API on 5118",
      "program": "${workspaceFolder}/MANGA-API/bin/Debug/net8.0/manga-api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/MANGA-API",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "Now listening on: (https?://\\S+)",
        "uriFormat": "%s/swagger"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    }
  ]
}
